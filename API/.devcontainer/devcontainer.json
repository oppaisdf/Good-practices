{
  "name": "C# .NET 8 Dev Container",
  "image": "mcr.microsoft.com/devcontainers/dotnet:8.0",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit"
      ]
    }
  },
  "forwardPorts": [
    5000,
    5001
  ],
  "containerEnv": {
    "ASPNETCORE_URLS": "http://+:5000;https://+:5001",
    "DOTNET_ENVIRONMENT": "Development"
  },
  "postCreateCommand": [
    "bash",
    "-lc",
    "sudo apt-get update -y && sudo apt-get upgrade -y && echo 'ðŸ”¥ Contenedor listo, papu ðŸ”¥'",
    "; New-Item -Path $PROFILE -ItemType File -Force",
    " && echo 'Set-PSReadLineOption -HistorySaveStyle SaveNothing' >> $PROFILE",
    " && echo 'Set-PSReadLineOption -MaximumHistoryCount 5' >> $PROFILE",
  ]
}